<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "70x5" %>
  </div>
  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<br>
<%= link_to "Home", root_path %>